<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".imc_salud">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fondo"
            android:gravity="center|center_horizontal|center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView50"
                android:layout_width="324dp"
                android:layout_height="87dp"
                android:gravity="center"
                android:text="Calcula tu imc "
                android:textSize="24sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textView53"
                android:layout_width="298dp"
                android:layout_height="152dp"
                android:gravity="center"
                android:text="Averigua nuestros consejos"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:background="#36FFFFFF"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView55"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|center_horizontal|center_vertical"
                    android:text="Ingresa tus datos"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView54"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="126dp">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView56"
                            android:layout_width="175dp"
                            android:layout_height="wrap_content"
                            android:text="Estatura" />

                        <TextView
                            android:id="@+id/textView57"
                            android:layout_width="175dp"
                            android:layout_height="wrap_content"
                            android:text="Peso" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/editTextTextPersonName4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#63FFFFFF"
                            android:ems="10"
                            android:inputType="textPersonName" />

                        <EditText
                            android:id="@+id/editTextTextPersonName5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#61FFFFFF"
                            android:ems="10"
                            android:inputType="textPersonName" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </TableLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button25"
                    android:layout_width="65dp"
                    android:layout_height="45dp"
                    android:background="?attr/actionModeCloseDrawable" />

                <Button
                    android:id="@+id/button26"
                    android:layout_width="65dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/icon6" />
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>